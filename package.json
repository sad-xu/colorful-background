{
	"name": "colorful-background",
	"displayName": "colorful-background",
	"description": "Make your background colorful!",
	"keywords": [
		"background",
		"colorful",
		"color"
	],
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.17.0"
	},
	"categories": [
		"Other",
		"Themes"
	],
	"activationEvents": [
		"*"
	],
	"main": "./src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.installColorfulBackground",
				"title": "Install Colorful Background"
			},
			{
				"command": "extension.uninstallColorfulBackground",
				"title": "Uninstall Colorful Background"
			}
		],
		"configuration": {
			"type": "Object",
			"title": "Colorful Background Config 配置",
			"properties": {
				"colorfulBackground.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Colorful Background enabled 插件是否启用"
				}
			}
		}
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test",
		"vscode:uninstall": "node ./src/uninstall"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"cz-conventional-changelog": "^2.1.0",
		"eslint": "^5.13.0",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
